<body>

    <%= form_with url: "/users/#{@user.id}/hikes/#{@hike.id}/cost", method: :post, local:true do |form| %>

      <%= form.label :item %>
      <%= form.text_field :item, placeholder: "Item" %>

      <%= form.label :price %>
      <%= form.text_field :price, placeholder: "Price" %>

      <%= form.submit "Submit" %>
    <% end %>
</body>
