<body>
<%= link_to "Back", "/users/#{@user.id}/hikes/#{@complete.hike.id}/complete" %>

<br>
    <%= form_with url: "/users/#{@user.id}/hikes/#{@complete.hike.id}/comment", method: :post, local:true do |form| %>

      <h6><p><%= form.label "Add Entry:" %></p></h6>
     <h6><p> <%= form.text_area :body, rows: 10,:cols => "90", wrap: "hard" %></p>
     <h6> <p><%= form.label "Add Picture:" %></p></h6>
     <p> <%= form.file_field :image %></p>

      <p><%= form.submit "Submit", class: "btn btn-primary"  %></p>
    <% end %>
</body>
