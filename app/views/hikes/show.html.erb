<%= button_to "Favorite", "/users/#{@user.id}/hikes/#{@hike.id}", method: :post %>
<%= button_to "Completed", "/users/#{@user.id}/hikes/#{@hike.id}/complete", method: :post %>

 <div class="container">


                <h1><%= @hike.name %></h1>
                <p>Location: <%= @hike.location %></p>
                <p>State: <%= @hike.state %></p>
                <p>Range: <%= @hike.range %></p>
                <p>Elevation: <%= @hike.elevation %> feet</p>
                <p>Prominence: <%= @hike.prominence %> feet</p>
                <p>Features: <%= @hike.features %></p>
                <p>Latitude: <%= @hike.latitude %></p>
                <p>Longitude: <%= @hike.longitude %></p>
          

    <h3> Current Weather Conditions </h3>
    <p>Description: <%= @current[:weather].first[:description] %> </p>
    <p>Temperature: <%= @current[:temp] %>째F</p>
    <p>Wind: <%= @current[:wind_speed] %> MPH</p>
    <img src="http://openweathermap.org/img/w/<%=@current[:weather].first[:icon]%>.png" alt="Girl in a jacket" width="50" height="50">

   


<h3> Daily Weather </h3>

  
        <div class="row">
            <% @daily.each do |d|%>
            <div class="col-sm-3">
                    <p><b>Date: </b><%=Time.at(d[:dt]).to_formatted_s(:long)%></p>
                    <p>Sunrise: <%= Time.at(d[:sunrise]).to_formatted_s(:time)%> </p>
                    <p>Sunset: <%= Time.at(d[:sunset]).to_formatted_s(:time)%> </p>
                    <p>Min Temperature: <%= d[:temp][:min]%>째F  </p>
                    <p>Max Temperature: <%= d[:temp][:max]%>째F </p>
                    <p>Wind: <%= d[:wind_speed]%> </p>
                    <p>Description: <%= d[:weather].first[:description]%> </p>
                    <img src="http://openweathermap.org/img/w/<%=d[:weather].first[:icon]%>.png" alt="Girl in a jacket" width="50" height="50">
                </div>
            <%end%>
        </div>

<h3>Hourly Weather </h3>

      
        <div class="row">
                    
                <% @hourly[0..11].each do |h|%>
                <div class="col-sm-3">
                    <p><b>Time: </b><%=Time.at(h[:dt]).to_formatted_s(:time)%></p>
                    <p>Temperature: <%= h[:temp]%>째F </p>
                    <p>Wind: <%= h[:wind_speed]%> </p>
                    <img src="http://openweathermap.org/img/w/<%=h[:weather].first[:icon]%>.png" alt="Girl in a jacket" width="50" height="50">
                </div>
                <%end%>
        </div>
    




<h3> Campgrounds</h3>

    <p> Campgrounds Within 20 Miles: <%= @count%> </p>

  
        <div class="row">

            <%@campgrounds.each do |c|%>
            <div class="col-sm-3">
                <p> <b>Name: </b><%= c[:FacilityName]%></p>
                <p> Reservable: <%= c[:Reservable]%></p>
                <p> <a href="https://www.recreation.gov/camping/campgrounds/<%=c[:FacilityID]%>"> View <%= c[:FacilityName]%> </a> </p>
            </div>
            <%end%>

        </div>


</div>



