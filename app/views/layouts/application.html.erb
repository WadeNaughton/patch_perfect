<!DOCTYPE html>
<html>
  <head>
    <title>PatchPerfect</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= render "layouts/header" %>
  </head>

  <body>
  
    <div class="container">


        <% if logged_in? %>
          <%= form_tag(search_path, :method=> "get") do %>
            <%= search_field_tag :search, params[:search], placeholder: "Search Name/Feature" %>
            <%= button_tag "Find Hike" %>
          <% end %>
        <% end %>

        <% flash.each do |type, msg| %>
        <div>
        <%= msg %>
        </div>
        <% end %>
        <%= yield %>
    </div>
  </body>
</html>
