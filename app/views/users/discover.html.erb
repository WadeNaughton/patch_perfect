<% @hikes.each do |hike| %>
  <h2><p>Name: <%=link_to "#{hike.name}", "/users/#{@user.id}/hikes/#{hike.id}", method: :get %></p></h2>
  <p>Elevation: <%= hike.elevation %></p>
  <p>Prominence:<%= hike.prominence %></p>
  <p>Location: <%= hike.location %></p>
  <p>State: <%= hike.state %></p>
  <p>Range: <%= hike.range %></p>
  <p>Features: <%= hike.features %></p>
<% end %>
