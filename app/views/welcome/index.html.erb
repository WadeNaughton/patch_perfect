<div class ="container text-center">

  <% if logged_in? %>
    <h1><p><%= "Lets Get Hiking, #{@current_user.first_name}" %></p></h1>
  <% else %>
    <h1><%= "Please Login/Create an Account to Continue" %></h1>
  <% end %>


  <div class="row">
      <div class="col-lg-12">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src="/assets/test.jpg"  alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="/assets/test3.JPG" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="/assets/test4.JPG" alt="Third slide">
          </div>
              <div class="carousel-item">
            <img class="d-block w-100" src="/assets/test5.jpg" alt="Fourth slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="/assets/test6.jpg" alt="Fifth slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="/assets/test7.jpg" alt="sixth slide">
          </div>
          
        </div>
      
      </div>
    </div>
  </div>

<%if logged_in?%>



    <div class="row">
      
        <div class="col-lg-6">
          <div id="user-comments">
            <h2>Discover Peaks</h2>
              <%= button_to "Peaks", "/users/#{@user.id}/discover", method: :get,class: "btn btn-primary"%>

          </div>
        </div>
      
        <div class="col-lg-6">
          <div id="user-comments">
            
            <h2>Build Your Profile</h2>
            <%= button_to "Profile", "/users/#{@user.id}", method: :get,class: "btn btn-primary"%>
          </div>
        </div>
      
    </div>
  



  <%else%>

    <div class="row">
      <div class="col">
        <div id="user-comments">
          <h2> Create An Account </h2>

          <%= button_to "Sign Up", "/register", method: :get,class: "btn btn-primary"%>
         </div>
      </div>

    


   
      <div class="col">
        <div id="user-comments">
          <h2> Login </h2>

          <%= button_to "Login", "/login", method: :get,class: "btn btn-primary"%>
         </div>
      </div>

    </div>

    <%end%>

    <div class="row">
      <div class="col">
        <div id="user-comments">
       <h2> FAQ's </h2>
        <%= button_to "View FAQ's", "/questions", method: :get,class: "btn btn-primary"%>
       </div>
      </div>


    </div>
</div>





